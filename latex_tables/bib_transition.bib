	month = may,
	year = {2016},
	keywords = {Energy storage, Europe 2050, Optimisation, Power system, Renewable energy, Strategic planning},
	pages = {1--10},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\Marta\\Zotero\\storage\\XJ244H27\\Bussar et al. - 2016 - Large-scale integration of renewable energies and .pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\Marta\\Zotero\\storage\\PQ3T4X64\\S2352152X16300135.html:text/html}
}

