	month = apr,
	year = {2016},
	keywords = {Aggregation, Electric vehicle charging, Energy system analysis, Renewable energy integration, Storage, Transmission},
	pages = {65--78},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\Marta\\Zotero\\storage\\QSPZJM7F\\Frew et al. - 2016 - Flexibility mechanisms and pathways to a highly re.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\Marta\\Zotero\\storage\\YR47DTMX\\S0360544216300032.html:text/html}
